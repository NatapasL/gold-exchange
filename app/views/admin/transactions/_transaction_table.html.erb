<table class="table is-striped is-hoverable is-fullwidth">
  <thead>
    <tr>
      <% %w[ID Name UserID Type Asset Amount CreatedAt Approve Reject].each do |name| %>
        <th><%= name %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% transactions.each do |transaction| %>
    <% informations = transaction.display_informations %>
    <tr>
      <td><%= informations[:id] %></td>
      <td><%= informations[:name] %></td>
      <td><%= transaction.user.id %></td>
      <td><%= informations[:type].titleize %></td>
      <td><%= informations[:asset].titleize %></td>
      <td><%= informations[:amount] %></td>
      <td><%= informations[:created_at] %></td>
      <td>
        <%= link_to 'Approve', approve_admin_transaction_path(transaction), method: :patch %>
      </td>
      <td>
        <%= link_to 'Reject', reject_admin_transaction_path(transaction), method: :patch %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
